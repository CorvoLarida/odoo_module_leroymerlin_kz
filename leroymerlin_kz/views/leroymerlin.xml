<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Data records go here -->
    <record id='catalog_action' model='ir.actions.act_window'>
        <field name="name">Catalog</field>
        <field name="res_model">catalog</field>
        <field name="view_mode">tree</field>
    </record>

    <record id='product_action' model='ir.actions.act_window'>
        <field name="name">Product</field>
        <field name="res_model">product</field>
        <field name="view_mode">tree</field>
    </record>

    <record id='detail_action' model='ir.actions.act_window'>
        <field name="name">Detail</field>
        <field name="res_model">detail</field>
        <field name="view_mode">tree</field>
    </record>


    <menuitem
        name="Leroymerlin"
        id="leroymerlin_base_menu"
        />

    <menuitem 
        name="Catalog"
        id="leroymerlin_catalog_menu"
        parent="leroymerlin_base_menu"
        action="catalog_action"
        />

    <menuitem 
        name="Products"
        id="leroymerlin_products_menu"
        parent="leroymerlin_base_menu"
        action="product_action"
        />

    <menuitem 
        name="Details"
        id="leroymerlin_details_menu"
        parent="leroymerlin_base_menu"
        action="detail_action"
        />    

    <record id="catalog_view_tree" model="ir.ui.view">
        <field name="name">Catalog</field>
        <field name="model">catalog</field>
        <field name="arch" type="xml">
            <tree>
                <field name="productnumber"/>
                <field name="categorylv1"/>
                <field name="categorylv2"/>
                <field name="categorylv3"/>
            </tree>
        </field>
    </record>

    <record id="products_view_tree" model="ir.ui.view">
        <field name="name">Products</field>
        <field name="model">product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="productnumber"/>
                <field name="name"/>
                <field name="price"/>
                <field name="currency_id" invisible='1'/>
                <field name="quantity"/>
                <field name="description"/>
                <field name="specialorder"/>
            </tree>
        </field>
    </record>

    <record id="details_view_form" model="ir.ui.view">
        <field name="name">Details</field>
        <field name="model">detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="productnumber"/>
                <field name="detail"/>
                <field name="value"/>
            </tree>
        </field>
    </record>

    <record id="catalog_view_search" model="ir.ui.view">
        <field name="name">Catalog Search</field>
        <field name="model">catalog</field>
        <field name="arch" type="xml">
            <search>
                <field name="productnumber"/>
                <field name="categorylv1"/>
                <field name="categorylv2"/>
                <field name="categorylv3"/>
            </search>
        </field>
    </record>

    <record id="product_view_search" model="ir.ui.view">
        <field name="name">Product Search</field>
        <field name="model">product</field>
        <field name="arch" type="xml">
            <search>
                <field name="productnumber"/>
                <field name="name"/>
                <field name="price"/>
                <field name="quantity"/>
                <field name="description"/>
                <field name="specialorder"/>
            </search>
        </field>
    </record>

    <record id="detail_view_search" model="ir.ui.view">
        <field name="name">Detail Search</field>
        <field name="model">detail</field>
        <field name="arch" type="xml">
            <search>
                <field name="productnumber"/>
                <field name="detail"/>
                <field name="value"/>
            </search>
        </field>
    </record>

</odoo>